{% liquid
  assign id = section.id
  assign settings = section.settings
  assign blocks = section.blocks
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .wrapper-{{id}} {
    position: relative;
    font-size: 0;
    line-height: 0;
  }
  .img-wrapper-{{ id }} img{
    width: 100%;
    height: auto;
    object-fit:cover;
  }
  .text-container-{{ id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
    padding-inline: 13%;
  }
  .text-container-{{ id }} h2{
    font-size: 56px;
    line-height: 56px;
    color: #1b0177;
    font-weight: 700;
  }

  @media(max-width: 768px) {
    .text-container-template--15508253245518__banner h2 {
      font-size: 25px;
      line-height: 32px;
      color: #1b0177;
      font-weight: 700;
      transform: translateY(-27px);
    }
  }
</style>


<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="img-wrapper-{{ id }}">
        {% unless section.settings.image == blank %}
          {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy' }}
        {% endunless %}
      </div>
      <div class="text-container-{{ id }}">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    </div>
  </div>
</div>

