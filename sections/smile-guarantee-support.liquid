<style>
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      overflow: hidden;
      background: #5c439a;
    }
    .section-wrapper--{{ section.id }}.page-width {
      background: #80D2D6;
      display: flex;
      justify-content: space-around;
      padding-block: 20px;
      margin: 5rem auto;
    }
    .left-column, .right-column {
      display: flex;
      align-items: center;
      gap: 30px;
      position : relative;
  }
  .section-wrapper--{{ section.id }}.page-width  .contents {
      align-self: flex-start;
  }
  .section-wrapper--{{ section.id }}.page-width  h2 {
      font-size: 20px;
      color: #ffffff;
      margin-inline: 16px;
      margin-block: 10px;
      margin-top: 0;
  }
   .section-wrapper--{{ section.id }}.page-width p {
      color: #000;
      background: #fff;
      border: 1px solid #0000009e;
      border-radius: 20px;
      padding: 10px 15px;
      font-size: 12px;
      font-weight: 500;
      line-height: 1.3;
      z-index: 1;
      position: relative;
      margin-block: 0px;
      max-width: 300px;
      transition: .5s ease;
  }
  .section-wrapper--{{ section.id }}.page-width p:hover {
      transform: scale(1.05);
  }
   .section-wrapper--{{ section.id }}.page-width p a {
      color : #5c439a ;
  }
   .section-wrapper--{{ section.id }}.page-width svg {
      position: absolute;
      left: 85px;
      /* transform: scale(.8); */
  }
    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }
  .section-wrapper--{{ section.id }}.page-width {
      flex-direction: column;
      gap: 20px;
      margin-top: -25px;
  }
  .section-wrapper--{{ section.id }}.page-width h2 {
      margin: 0;
  }
      .left-column, .right-column {
      display: grid;
      grid-template-columns: repeat(3,1fr);
  }
  .section-wrapper--{{ section.id }}.page-width .contents {
      align-self: flex-start;
      grid-column: 2/-1;
  }
  .section-wrapper--{{ section.id }} .right-column {
      border-top: 1px solid #ffffff;
      padding-top: 20px;
  }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }} page-width">
    <div class="left-column">
      <div class="image-wrapper">
        <img src="{{ 'smile-gurantee.png' | asset_url}}">
      </div>
      <div class="contents">
        <h2>30 day Guarantee</h2>
        <p>
          Backed by our Hassle Free 30 Day Guarantee! Don't absolutely love it? Send it back for a full refund.
          <a class="open-popup" href="#our-guarantee">Our Guarantee ></a>
        </p>
      </div>
      {%- render 'smile-all-icons', name: 'caption-right' -%}
    </div>
    <div class="right-column">
      <div class="image-wrapper">
        <img src="{{ 'smile-support.png' | asset_url}}">
      </div>
      <div class="contents">
        <h2>Contact Smile Optics Expert</h2>
        <p>
          Need help? Speak with one of our Smile Optics experts, available 7am - 7pm PST Monday - Friday.
          <a href="/pages/support">Contact Support ></a>
        </p>
      </div>
      {%- render 'smile-all-icons', name: 'caption-right' -%}
    </div>
  </div>
</section>

