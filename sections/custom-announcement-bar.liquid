{% assign id  = section.id %}
<style>
    .custom__announce-bar--{{ section.id }}{
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       overflow: hidden;
    }
    .desktop__only-{{ id }} {
      display: block;
    }  
    .acc_wrapper {
      display: flex;
      justify-content: space-between;
      /* padding: 0 16px; */
      padding: 0px 30px;
    }  
    .shipping-{{ id }} p{
      color: #fff;
      font-size: 12px;
      line-height: 17px;
      font-weight: 600;
      margin: 0;      
   }
    .shipping-{{ id }} a,
    .support-{{ id }} a{ 
      color: #fff;
      background: inherit;
      color: #fff;
      font-size: 12px;
      text-decoration: none;
      transition: all  0.5s ease-in-out;
      border-radius: 15px;
      display: flex;
      width: max-content;
      margin: auto; 
      padding: 2px 10px;
      font-weight: 600;      
   }
    .shipping-{{ id }} a:hover{
      background-color: #68d4d2;
      color: #ffffff;
   }
    .support-{{ id }} a{
      background: #42326B;
      padding: 0 15px;
   }
    .support-{{ id }} a:hover{
      background: #fff;
      color: #5C439A;
   }
   .support-{{ id }} p{
      font-size: 10px;
      line-height: 14px;
      font-weight: 500;
   }
    .shipping-{{ id }},
    .support-{{ id }}{
      display: flex;
      align-items: center;
      gap: 5px;
   }
    .icon-{{ id }}{
      height: 23px;
      width: 20px;  
    }
  @media screen and (max-width: 990px){
     .custom__announce-bar--{{ section.id }}{
       margin-top: {{ section.settings.margin_top-m }}px;
       margin-bottom: {{ section.settings.margin_bottom-m }}px;
       padding-top: {{ section.settings.padding_top-m }}px;
       padding-bottom: {{ section.settings.padding_bottom-m }}px;
     }
    .shipping-{{ id }} a,
    .support-{{ id }} a {
      display: none;
    }
    .shipping-{{ id }} p{
      font-size: 10px;
      line-height: 10px;     
    }   
    .support-{{ id }} p{
      font-size: 8px;
      line-height: 10px;     
    }   
    .acc_wrapper {
      padding: 5px 10px;
    } 
    .support-{{ id }} {
      flex-direction: row-reverse;
    }
    .shipping-{{ id }},
    .support-{{ id }}{
      align-items: baseline;
    }    
    .icon-{{ id }}{
      height: 15px;
      width: 12px;  
    }    
 }
</style>

<div class="custom__announce-bar--{{ section.id }}">
  <div class="acc_wrapper color-{{ section.settings.color_scheme }}">
    <div class="shipping-{{ id }}"> 
      <div class="icon-{{ id }}" style="filter: grayscale(1);">{% render "all-icons", name: "shipping" %}</div>
      <p>{{ section.settings.title }}</p>
      <a href="{{ section.settings.shipping_link }}" >{{ section.settings.btn_text }}</a>
    </div>
    <div class="support-{{ id }}"> 
      <div class="icon-{{ id }}" style="filter: brightness(13.5);">{% render "all-icons", name: "phone" %}</div>
      <p>{{ section.settings.support_text }}</p>
      <a href="{{ section.settings.support_link }}" >{{ section.settings.support_btn }} ></a>
    </div>
  </div>
</div>

