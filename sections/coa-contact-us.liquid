{% assign id = section.id %}

<style>
    .coa_contact--{{ id }} {
     margin-top: {{ section.settings.margin_top }}px;
     margin-bottom: {{ section.settings.margin_bottom }}px;
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
     max-width: 100vw;
     overflow: hidden;
    }
    .container-{{ id }} {
      background-image: url("{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}");
      background-repeat: repeat-x;
      background-size: 49% 164px;
      background-position: bottom left 370px;
      box-sizing: border-box;
      padding: 0px 0 100px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .container-{{ id }} h6{
      font-size: 13px;
      font-weight: 500;
      line-height: 18px;
      color: #1B0177;
      text-align: center;
      margin: 5px;
    }
    .container-{{ id }} a{
      margin-bottom: 75px;
      width: 312px;
      font-size: 19px;
      text-decoration: none;
      background: #fff;
      letter-spacing: 1px;
      height: 54px;
      line-height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #1b0177;
      border-radius: 30px;
      transition: background .2s,color .2s;
      cursor: pointer;
      outline: 1px solid #1b0177;
    }
   .cf__btn-text:hover {
      background: #11004A;
      color: rgb(167, 242, 246);
    }
@media screen and (max-width: 890px){
   
   .coa_contact--{{ id }} {
     margin-top: {{ section.settings.margin_top-m }}px;
     margin-bottom: {{ section.settings.margin_bottom-m }}px;
     padding-top: {{ section.settings.padding_top-m }}px;
     padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
    }
   .container-{{ id }} {
      background-size: 53% 80px;
      background-position: bottom left 355px;
    } 
   .container-{{ id }} a{
      margin-bottom: 0px;
      width: 190px;
      font-size: 18px;
    }
    .container-{{ id }} h6{
      font-size: 14px;
      font-weight: 500;
      line-height: 20px;
      margin-bottom: 15px;
    }
  }
</style>

<section class="coa_contact--{{ id }}">
  <div class="container-{{ id }}">
      <h6>{{ section.settings.desc }}</h6>
      <a class="cf__btn-text button-font" href="/">{{ section.settings.btn_text }}</a>
  </div> 
</section>



