<style>
   .section-container--{{ section.id }}{
     margin-top: {{ section.settings.margin_top | append:'px' }};
     margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
     padding-top: {{ section.settings.padding_top | append:'px' }};
     padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
     overflow: hidden;
     position: relative;
     background : #7EE2E0;
     background-image: url({{ 'smile-top-curve.svg' | asset_url }}) , url({{ 'smile-bottom-curve.svg' | asset_url }});
     background-repeat: no-repeat, no-repeat;
     background-position: top center, bottom center;
     background-size: contain;
   }
   /* @media screen and (min-width: 800px) and (max-width: 1200px) */
  @media screen and (min-width: 1700px){
    .section-container--{{ section.id }}{
    background-image: url({{ 'smile-top-curve-large.svg' | asset_url }}) , url({{ 'smile-bottom-curve-large.svg' | asset_url }});
    }
  }
  .desktop-{{ section.id }} {
    display: block;
  }
  .mobile__only-{{ section.id }} {
      display: none;
  }
   .section-wrapper--{{ section.id }} {
   /* position : relative; */
   }
   .section-wrapper--{{ section.id }} .center-button-wrapper {
      text-align: center;
      margin: 13px 0 0 0;
   }
   .box-{{ section.id }} {
     /* position : relative; */
      width: max-content;
      margin: auto;
      position : relative;
   }
   .box-{{ section.id }} .single_caption_1 {
      top: 22% !important;
      left: -221px !important;
   }
   .box-{{ section.id }} .single_caption_2 {
      top: 57% !important;
      left: -280px !important;
   }
   .box-{{ section.id }} .single_caption_3 {
      top: 17% !important;
      right: -260px !important;
      left: unset !important;
   }
   .box-{{ section.id }} .single_caption_4 {
      top: 65% !important;
      left: unset !important;
      right: -228px !important;
   }
   .section-wrapper--{{ section.id }} .sc-content{
     font-size: 12px;
     line-height: 17px;
     color: #000;
     font-weight: 500;
     text-align: justify;
   }
   .section-wrapper--{{ section.id }} .sc-content a span{
     text-decoration: none !important;
   }
   .section-wrapper--{{ section.id }} .single-caption-text-block{
     max-width: max-content;
     border: 1px solid #0000005e;
   }
   .section-wrapper--{{ section.id }} .single-caption-text-block p{
     max-width: unset;
   }
    .section-container--{{ section.id }} .smile-text-block {
   text-align: center;
   }
    .section-container--{{ section.id }} .smile-text-block h2 {
   font-size: 35px;
   color: #ffffff;
   margin-block: 0;
   }
    .section-container--{{ section.id }} .smile-text-block h3 {
   font-size: 28px;
   color: #5c439a;
   margin-block: 0;
   }
  .section-container--{{ section.id }} .smile-image-wrapper img {
   width: 100%;
   max-width: 400px;
   margin: auto;
   display: block;
   }

   @media screen and (max-width: 768px){
   .section-container--{{ section.id }}{
   margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
   margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
   padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
   padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
   }
  .desktop-{{ section.id }} {
    display: none;
  }
  .mobile__only-{{ section.id }} {
      display: block;
  }
  .box-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: unset;
    grid-gap: 10px;
  }
   .section-wrapper--{{ section.id }}.page-width {
   display: grid;
   /* gap:10px;
   grid-template-columns: repeat(2,1fr); */
   }
  .section-wrapper--{{ section.id }}  .smile-text-block h2 {
        font-size: 26px;
    }
  .section-wrapper--{{ section.id }}  .smile-text-block h3 {
      font-size: 18px;
    }
   .section-wrapper--{{ section.id }}  .single_caption {
   position: unset;
   transform: unset;
   align-items: flex-start;
   }
   .section-wrapper--{{ section.id }} .smile-text-block {
   grid-column: 1/-1;
     margin-block: 15px;
   }
   .section-wrapper--{{ section.id }} .smile-image-wrapper img {
     transform: scale(1.3) translateX(-12px) translateY(5px);
     z-index: 4;
     position: relative;
   }
   .section-wrapper--{{ section.id }}  .single_caption :is(.caption-right-arrow , .caption-left-arrow ) {
   display : none;
   }
   .section-wrapper--{{ section.id }}  .single_caption_4 {
   display : none;
   }
   .section-wrapper--{{ section.id }}   .center-button-wrapper {
   text-align: center;
   grid-column: 1/-1;
   z-index: 4;
   transform: translateY(10px);
   }
   .section-wrapper--{{ section.id }}  a.white-button-1 {
     font-size: 18px;
      padding: 20px 30px !important;
   }
     .section-wrapper--{{ section.id }} .sc-content {
    text-align: left;
}
     .section-wrapper--{{ section.id }} .single-caption-text-block p {
    max-width: unset;
    display: inline;
}
   }
</style>
<section class="section-container--{{ section.id }}">
  <!-- <div class="top-shape"><img src="{{ 'smile-top-curve.svg' | asset_url }}" /></div> -->
  <div class="section-wrapper--{{ section.id }} page-width">
    <div class="smile-text-block">
      <h2>{{ section.settings.title }}</h2>
      <h3>{{ section.settings.subtitle }}</h3>
    </div>

    {% comment %}
      <!-- <div class="caption-wrapper"> -->
      {% for block in section.blocks %}
        {% render 'smile-caption',
          title: block.settings.title,
          content: block.settings.content,
          caption_alignment: block.settings.caption_alignment,
          position_from_top: block.settings.position_from_top,
          position_from_left: block.settings.position_from_left,
          serial: forloop.index
        %}
      {% endfor %}
      <!-- </div> -->
    {% endcomment %}
    <div class="smile-image-wrapper">
      <div class="box-{{ section.id }}">
        <div class="desktop-{{ section.id }}">{{ section.settings.image | img_url: 'master' | img_tag }}</div>
        {% for block in section.blocks %}
          {% render 'smile-caption',
            title: block.settings.title,
            content: block.settings.content,
            caption_alignment: block.settings.caption_alignment,
            position_from_top: block.settings.position_from_top,
            position_from_left: block.settings.position_from_left,
            serial: forloop.index
          %}
        {% endfor %}
        <div class="mobile__only-{{ section.id }}">{{ section.settings.image | img_url: 'master' | img_tag }}</div>
      </div>
    </div>
    <div class="center-button-wrapper">
      <a class="white-button-1" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
    </div>
  </div>
  <!-- <div class="bottom-shape"> <img src="{{ 'smile-bottom-curve.svg' | asset_url }}" /></div> -->
</section>

{% schema %}
{
  "name": "Smile Whitening",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Caption",
      "type": "caption",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "radio",
          "id": "caption_alignment",
          "label": "Caption alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "header",
          "content": "Position"
        },
        {
          "type": "range",
          "id": "position_from_top",
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "%",
          "label": "Top",
          "default": 0
        },
        {
          "type": "range",
          "id": "position_from_left",
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "%",
          "label": "Left",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Smile Whitening"
    }
  ]
}
{% endschema %}
