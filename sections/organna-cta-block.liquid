<style>
  .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      background: {{ section.settings.bg-color}};
      overflow: hidden;
      text-align: center;
      color: #1b0177;
  }
  h2.section-title {
      font-size: 40px;
      color: {{ section.settings.title-color}};
  }

  .section-content p {
      font-size: 12px;
      line-height: 16px;
      max-width: 70%;
      margin: auto;
  }
  p.image-block-title {
      font-size: 15px;
      letter-spacing: 0;
      margin-block: 0;
  }
  .image_block_wrapper {
      display: flex;
      gap:20px;
      max-width: 60%;
      margin: 50px auto;
  }
  .single-image-blocks {
      flex: 1;
      padding-block: 30px;
      border-radius: 30px;
      background: #ffffff;
  }
  .image-block-image-wrapper img {
      max-width: 80px;
  }
  /* a.custom-button {
      text-decoration: none;
      border: 1px solid #1b0177;
      padding: 10px 45px;
      border-radius: 50px;
      font-size: 14px;
      transition : .3s;
  }
  a.custom-button:hover {
      background: #1b0177;
      color: #ffffff;
  } */
      @media screen and (max-width: 768px){
        .section-container--{{ section.id }}{
          margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
          margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
          padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
          padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
        }
        h2.section-title {
          font-size: 25px;
        }
        .section-content p {
          max-width: 90%;
        }
        .image_block_wrapper {
          max-width: 100%;
          margin: 20px auto;
        }
        .image-block-image-wrapper img {
           max-width: 50px;
        }

        p.image-block-title {
           font-size: 10px;
        }


      }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }} page-width">
     {%  render 'smile-icon-title', image: section.settings.image, title: section.settings.title, subtitle: section.settings.subtitle, content: section.settings.content  %}
    <div class="image_block_wrapper">
      {% for block in section.blocks %}
        <div class="single-image-blocks">
          <div class="image-block-image-wrapper">{{ block.settings.image | img_url: 'master' | img_tag }}</div>

          <p class="image-block-title">{{ block.settings.title }}</p>
        </div>
      {% endfor %}
    </div>
      <a class="custom-button button-font" href="{{ section.settings.button_url }}">
        {{ section.settings.button_label }}
      </a>
  </div>
</section>

{% schema %}
{
  "name": "Organna CTA Block",
  "settings": [

    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "title-color",
      "label": "Title Color",
      "default": "#1b0177"
    },
    {
      "type": "color",
      "id": "bg-color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Image Block",
      "type": "image_block",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Organna CTA Block"
    }
  ]
}
{% endschema %}
