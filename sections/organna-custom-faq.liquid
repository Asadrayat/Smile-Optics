<style>
  .custom__faq--{{ section.id }}{
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }
  .custom__faq-wrapper{
    /* display: grid; */
    grid-template-columns: repeat(2,1fr);
    grid-gap: 85px;
    align-items: center;
  }
  .custom__faq-container h2{
    color: var(--Black, #0B0F0E);
    font-size: 40px;
    line-height: 55px; /* 137.5% */
    text-transform: uppercase;
    margin: 0 0 24px;
  }
  .custom__faq-image{
    font-size: 0;
    line-height: 0;
    overflow: hidden;
  }
  .custom__faq-image img{
    width: 100%;
    height: 100%;
  }

  .accordion__intro {
    position: relative;
    padding: 16px 0;
    cursor: pointer;
  }
  .accordion__intro h4{
    color: var(--Black, #0B0F0E);
    font-size: 20px;
    font-weight: 400;
    line-height: 24px;
    margin: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .accordion__content {
    max-height: 0;
    overflow: hidden;
    will-change: max-height;
    transition: all 0.25s ease-out;
    opacity: 0;
  }
  .accordion__content p{
    color: #303030;
    font-size: 16px;
    line-height: 24px; /* 150% */
    margin: 0;
  }
  .accordion__icons{
    font-size: 0;
    line-height: 0;
    position: relative;
  }
  .accordion__icons svg:nth-of-type(1){
    opacity: 1;
    transform: rotate(0);
    transition: all 0.4s ease-in-out;
  }
  .accordion.accordion__active .accordion__icons svg:nth-of-type(1){
    opacity: 0;
    transform: rotate(180deg);
  }
  .accordion.accordion__active .accordion__icons svg:nth-of-type(2){
    opacity: 1;
    transform: rotate(180deg);
  }
  .accordion__icons svg:nth-of-type(2){
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transform: rotate(0);
    transition: all 0.4s ease-in-out;
  }
  .accordion.accordion__active .accordion__icons svg:nth-of-type(2){
    opacity: 1;
    transform: rotate(180deg);
  }
  .accordion__active .accordion__content {
  	opacity: 1;
  }

  @media screen and (min-width: 768px){
    .custom__faq-wrapper.page-width{
      padding-left: 0;
      margin-left: 0;
      max-width: 200rem;
    }
  }
  @media screen and (max-width: 768px){
    .custom__faq--{{ section.id }}{
      margin-top: {{ section.settings.margin_top-m }}px;
      margin-bottom: {{ section.settings.margin_bottom-m }}px;
      padding-top: {{ section.settings.padding_top-m }}px;
      padding-bottom: {{ section.settings.padding_bottom-m }}px;
    }

    .custom__faq-wrapper{
        grid-template-columns: 1fr;
        grid-gap: 24px;
      }
     .custom__faq-container h2{
        font-size: 24px;
        line-height: 30px; /* 137.5% */
        margin: 0 0 16px;
      }
      .accordion__intro{
        padding: 12px 0;
      }
      .accordion__intro h4{
        font-size: 14px;
        line-height: 14px;
      }
      .accordion__content p{
        font-size: 10px;
        line-height: 14px; /* 150% */
      }
      .accordion__icons svg{
        width: 16px;
        height: 16px;
      }
  }
</style>
<style>
    .accordion {
        text-align: center;
        width: 80%;
        margin: auto;
        border-bottom: 1px solid #c7c7c7;
        border-top: unset;
    }
    .accordion__intro  {
        color: #1b0177;
        font-size: 18px;
        line-height: 22px;
        font-weight: 700;
        margin-block: 10px;
    }

    .accordion__content {
        color: #303030;
        font-size: 15px;
        line-height: 22px;
        margin: 0;
    }
    .accordion__active .accordion__content {
        opacity: 1;
        margin-top: 0;
        margin-bottom : 15px;
        /* margin-block: 30px; */
    }
    .accordion__active .accordion__content ul ,
    .accordion__active .accordion__content ol {
      text-align: left;
      font-size: 14px;

    }
    .accordion__icons {
        font-size: 0;
        line-height: 0;
        position: relative;
        position: absolute;
        right: 20px;
    }

    @media screen and (max-width: 768px){
      .accordion {
        width: 90%;
      }
      .accordion__intro {
        color: #1b0177;
        font-size: 18px;
        line-height: 16px;
        font-weight: 700;
        margin-block: 20px;
      }
      .custom__faq--{{ section.id }}    .accordion__content p {
        font-size: 14px;
        line-height: 20px;
        text-align: justify;
      }
    }
</style>

<section class="custom__faq--{{ section.id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="custom__faq-wrapper page-width">
    <div class="custom__faq-container">
      <h2>{{ section.settings.title }}</h2>
      <div class="custom__faq-inner-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'item' %}
            {% unless block.settings.text == blank %}
              <div
                data-aos="fade-up"
                class="accordion {% comment %}{% if forloop.first %}accordion__active{% endif %}{% endcomment %}"
              >
                <h4 class="accordion__intro">
                  <span>{{ block.settings.title }}</span
                  ><span class="accordion__icons">
                    {%- render 'all-icons', name: 'faq-plus' -%}
                    {%- render 'all-icons', name: 'faq-minus' -%}
                  </span>
                </h4>
                <div class="accordion__content">
                  {{ block.settings.text }}
                </div>
              </div>
            {% endunless %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  const accordions = document.querySelectorAll(".accordion");

  const openAccordion = (accordion) => {
    const content = accordion.querySelector(".accordion__content");
    accordion.classList.add("accordion__active");
    content.style.maxHeight = content.scrollHeight + "px";
  };

  const closeAccordion = (accordion) => {
    const content = accordion.querySelector(".accordion__content");
    accordion.classList.remove("accordion__active");
    content.style.maxHeight = null;
  };

  accordions.forEach((accordion) => {
    const intro = accordion.querySelector(".accordion__intro");
    const content = accordion.querySelector(".accordion__content");

    if (intro && content) {
      intro.onclick = () => {
        if (content.style.maxHeight) {
          closeAccordion(accordion);
        } else {
          accordions.forEach((accordion) => closeAccordion(accordion));
          openAccordion(accordion);
        }
      };
    } else {
      console.error("Accordion header or content not found.");
    }
  });
</script>

