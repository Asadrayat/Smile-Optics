{% liquid
  assign id = section.id
  assign settings = section.settings
  assign blocks = section.blocks
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    overflow: hidden;
  }
  .mobile__only-{{ id }} {
    display: none;
  }
   .icon-wrapper-{{ id }} {
    position: relative;
    z-index: 5;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 5px dotted rgb(229,245,246);
    padding: 60px;
    margin: auto;
  }
  .icon-{{ id }} {
    max-width: 190px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .icon-{{ id }} h6{
    margin: 0;
    color: rgb(111, 96, 233);
    font-size: 10px;
    line-height: 14px;
  }
  .icon-wrapper-{{ id }} img{
    max-width: 67px;
    height: auto;
  }
  .review-{{id}} {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .review-{{id}} img{
    max-width: 93px;
    height: auto;
  }
  .review-{{id}} h2{
    margin: 5px 0 0 0;
    font-size: 40px;
    line-height: 40px;
    color: rgb(111, 96, 233);
    font-weight: 500;
  }
  .review-{{id}} h3{
    margin: 5px 0;
    font-size: 20px;
    line-height: 24px;
    color: #000;
  }
  .review-{{id}} p{
    margin: 0;
    font-size: 12px;
    line-height: 12px;
    color: #3899ec;
    text-decoration: underline;
  }
  .feature__text-{{ id }} {
    text-align: center;
    color: #000;
    font-size: 12px;
    line-height: 17px;
   }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .mobile__only-{{ id }} {
      display: block;
    }
  .icon-m{{ id }} {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 30px 15px;
    }
  .feature__text-{{ id }} {
    font-size: 11px;
    line-height: 14px;
   }
   .review-{{id}} {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .review-m-{{ id }} {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 0;
    }
    .review-m-{{ id }} img{
      max-width: 93px;
      height: auto;
    }
    .review-m-{{ id }} h2{
      margin: 5px 0 0 0;
      font-size: 26px;
      line-height: 26px;
      color: rgb(111, 96, 233);
      font-weight: 600;
     }
    .review-m-{{ id }} h3{
      margin: 10px 0;
      font-size: 20px;
      line-height: 24px;
      color: #000;
    }
    .review-m-{{ id }} p{
      margin: 0;
      font-size: 13px;
      line-height: 13px;
      color: #3899ec;
      text-decoration: underline;
    }
    .desktop__only-{{ id }} {
      display: none;
    }
    .text-wrapper-{{ id }}{
      padding: 0 1.5rem;
    }
    .text-wrapper-{{ id }} h2{
     font-size: 24px;
    }
    .text-wrapper-{{ id }} p{
      font-size: 14px;
      line-height: 17.6px;
      font-weight: 500;
      text-align: center;
      margin-top: 0;
    }
    .img-wrapper-{{ id }} {
      margin-top: 0px;
    }
    .img-wrapper-{{ id }} img{
      transform: scale(1);
    }
    .icon-wrapper-{{ id }} {
      gap: 20px;
      margin-top: 25px;
    }
    .icon-wrapper-{{ id }} img{
      width: 100%;
      object-fit: cover;
    }

  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="review-m-{{ id }} mobile__only-{{ id }}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'review' %}
              {% unless block.settings.image == blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy' }}
              {% endunless %}
              <h2>{{ block.settings.reviews }}</h2>
              <h3>{{ block.settings.text }}</h3>
              <p>{{ block.settings.small_text }}</p>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="icon-wrapper-{{ id }} icon-m{{ id }} page-width">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'icon' %}
              <div
                class="icon-{{ id }}"
                data-aos="fade-up"
                {% if forloop.index == 1 %}
                  data-aos-delay="200"
                {% elsif forloop.index == 2 %}
                  data-aos-delay="350"
                {% elsif forloop.index == 4 %}
                  data-aos-delay="400"
                {% elsif forloop.index == 5 %}
                  data-aos-delay="250"
                {% endif %}
              >
                {% unless block.settings.image == blank %}
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy' }}
                {% endunless %}
                <p class="feature__text-{{ id }}">{{ block.settings.review }}</p>
                <h6>{{ block.settings.reviewer }}</h6>
              </div>
            {% when 'review' %}
              <div class="review-{{ id }}  desktop__only-{{ id }}" data-aos="fade-up" data-aos-delay="50">
                {% unless block.settings.image == blank %}
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy' }}
                {% endunless %}
                <h2>{{ block.settings.reviews }}</h2>
                <h3>{{ block.settings.text }}</h3>
                <p>{{ block.settings.small_text }}</p>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

