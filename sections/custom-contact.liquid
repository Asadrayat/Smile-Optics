      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top-m",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom-m",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
    {
        "type": "text",
        "name": "Faq",
        "settings": [
          {
            "type": "textarea",
            "id": "fp_btntext",
            "label": "Add faq Title"
          },
          {
            "type": "url",
            "id": "fp_url",
            "label": "Add Faq Url"
          }
