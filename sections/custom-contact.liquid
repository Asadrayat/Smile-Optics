      "label": "Add Navigation Text"
    },
    {
      "type": "header",
      "content": "Contact (Form)"
    },
    {
      "id": "title",
      "type": "textarea",
      "label": "Add Title"
    },
    {
      "id": "desc",
      "type": "richtext",
      "label": "Add Description"
    },
    {
      "id": "policy",
