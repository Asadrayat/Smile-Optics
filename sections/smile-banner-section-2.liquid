{% assign id = section.id %}
<style>
    .section_wrapper-{{ section.id }}{
        margin-top: {{ section.settings.margin_top | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
        padding-top: {{ section.settings.padding_top | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
        width: 98%;
        margin: auto;
        box-sizing: border-box;
        overflow: hidden;
    }
        .section-container--{{ section.id }}{
            background-image: linear-gradient(to left, {{ section.settings.background_color_2 }} {{ section.settings.color_coverage | append: '%' }} , {{ section.settings.background_color_1 }} {{ section.settings.color_coverage | append: '%' }});
        }

        .section-wrapper--{{ section.id }}.page-width {
            display: flex;
        }
        .section-container--{{ section.id }}     .single-caption-text-block {
            max-width: max-content;
        }
        .section-container--{{ section.id }}     .single-caption-text-block p {
            max-width: unset;
        }
        .section-container--{{ section.id }}      .banner-left-column {
            width : 30%;
            /* background : {{ section.settings.background_color_1 }}; */
            align-self: center;
        }
        .section-container--{{ section.id }}      .banner-content {
            line-height: normal;
            margin: 8px 0;
        }
        .section-container--{{ section.id }}      .banner-right-column {
            width : 70%;
            /* background : {{ section.settings.background_color_2 }}; */
            position : relative;
        }
        .section-container--{{ section.id }}      .banner-title-wrapper  h2 {
            margin-block: 0;
            line-height: 1;
        }

        .section-container--{{ section.id }}      .single-banner-icon-wrapper h5 {
            margin: 0;
            display: flex;
            align-items: center;
            color: #fff;
        }


        .section-container--{{ section.id }}      .banner-review-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: max-content;
            line-height: 1;
        }
        .section-container--{{ section.id }}      .banner-review-wrapper svg {
            margin-block: 5px;
        }
        .section-container--{{ section.id }}      span.review-text-black {
            color: #5c439a;
            font-weight: 700;
            font-size: 10px;
        }
        .section-container--{{ section.id }}      span.review-text-blue {
            font-family: questrial,sans-serif;
            color: #6f60e9;
            font-size: 10px;
            text-decoration: underline;
        }




        .section-container--{{ section.id }}      .banner-icon-block {
            display: flex;
            justify-content: space-around;
            padding-block: 30px;
            max-width: 400px;
        }
        .section-container--{{ section.id }}      .single-banner-icon-block {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .section-container--{{ section.id }}      .single-banner-icon-block  svg {
            width: 40px;
            height: 40px;
        }
        .section-container--{{ section.id }}      .single-banner-icon-block span {
            font-size: 10px;
            font-weight: 700;
        }
         .section-container--{{ section.id }} a.blue-button-1 {
            padding: 10px 40px;
            font-weight: 600;
            display: inline-block;
        }

    .section-container--{{ section.id }}    .image-wrapper {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 2;
          transform: scale(1.2);
          max-width: 100%;
      }
    .section-container--{{ section.id }}    .image-wrapper .right-on-mobile,
    .section-container--{{ section.id }}    .image-wrapper .left-on-mobile {
          max-width: fit-content;
          border: 3px solid #cfcff5;
          margin: 5px;
          border-radius: 20px;
      }
    /* css for highlight starts here    */
       .img-{{ id }} {
         position: relative;
       }
         .info-{{ id }} {
          display: flex;
          flex-direction: row-reverse;
        }
        .box1-{{ id }} {
          position: absolute;
          top: 40%;
          right: 180px;
          /* transform: translate(-170px, 20px); */
        }
        .box3-{{ id }} {
          position: absolute;
          top: 16%;
          right: 185px;
          /* transform: translate(-259px, -45px); */
        }
        .info-2{{ id }} {
          display: flex;
          flex-direction: row;
          position: absolute;
          bottom: 43%;
          left: 210px;
          /* transform: translate(260px, 100px); */
        }
        .info-2{{ id }} img{
          rotate: 180deg;
        }
        .info-{{ id }} img{
          width: 81px;
          height: 42px;
          object-fit: cover;
          position: unset;
          transform: none;
        }
        .box-{{ id }} {
          background: #fff;
          border: 1px solid #0000009e;
          font-size: 12px;
          line-height: 17px;
          color: #000;
          text-align: justify;
          padding: 5px 15px;
          border-radius: 15px;
          letter-spacing: 0px;
          width: max-content;
        }
        .box-{{ id }} p{
          margin: 0;
        }
      @media only screen and (max-width: 1290px) and (min-width: 891px)  {
        /* .wrapper-{{ section.id }} {
          grid-template-columns: 1fr 1fr 1fr;
        } */
       }
