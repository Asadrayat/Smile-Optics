{% assign id = section.id %}

<style>
      .coa_contact--{{ id }} {
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       max-width: 100vw;
       overflow: hidden;
      }
      .container-{{ id }} {
        background-image: url("{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}");
        background-repeat: repeat-x;
        background-size: 49% 164px;
        background-position: bottom left 370px;
        box-sizing: border-box;
        /* padding: 0px 0 100px 0; */
        /* display: flex;
        flex-direction: column;
        align-items: center; */

      }
      .container-{{ id }} h1{
        font-size: 40px;
        line-height: 40px;
        color: rgb(0, 0, 0);
        margin: auto;
        /* text-align: center; */
        max-width: 900px;
      }
      .container-{{ id }} h3{
        font-size: 35px;
        line-height: 49px;
        color: rgb(53, 139, 133);
        font-weight: 500;
        font-family: auto;
      }
      .container-{{ id }} img{
        max-width: 974px;
        height: auto;
        object-fit: cover;
        border-radius: 30px;
      }
      .container-{{ id }} h4{
        font-size: 20px;
        line-height: 32px;
        color: rgb(10, 14, 139);
        text-align: center;
        max-width: 915px;
        font-weight: 500;
      }
      @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
      }
      .container-{{ id }} p {
        animation: fadeIn .8s;
      }
    .container-{{ id }} p{
        font-size: 14px;
        line-height: 22px;
        text-align: justify;
        color: rgb(64, 63, 43);
        max-width: 900px;
        margin: 15px auto;
      }
  @media screen and (max-width: 890px){

   .coa_contact--{{ id }} {
     margin-top: {{ section.settings.margin_top-m }}px;
     margin-bottom: {{ section.settings.margin_bottom-m }}px;
     padding-top: {{ section.settings.padding_top-m }}px;
     padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
    }
    .container-{{ id }} h1{
      font-size: 23px;
      line-height: 23px;
      text-align: center;
    }
    .container-{{ id }} h3 {
      font-size: 24px;
      line-height: 34px;
      width: 90%;
      text-align: center;
    }
    .container-{{ id }} img{
      max-width: 90%;
    }
    .container-{{ id }} h4{
      max-width: 90%;
    }
    .container-{{ id }} p{
      max-width: 90%;
    }
    }
</style>

<section class="coa_contact--{{ id }}">
  <div class="container-{{ id }} page-width">
    <h1>{{ section.settings.title }}</h1>
    <div class="content-{{ id }}">{{ section.settings.content }}</div>
  </div>
</section>

