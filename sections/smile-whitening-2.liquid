<style>
  .section-container--{{ section.id }}{
  margin-top: {{ section.settings.margin_top | append:'px' }};
  margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
  padding-top: {{ section.settings.padding_top | append:'px' }};
  padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
  overflow: hidden;
  position: relative;
  background : #7EE2E0;
  background-image: url({{ 'smile-top-curve.svg' | asset_url }}) , url({{ 'smile-bottom-curve.svg' | asset_url }});
  background-repeat: no-repeat, no-repeat;
  background-position: top center, bottom center;
  }
  .section-wrapper--{{ section.id }} {
  position : relative;
  }
  .section-wrapper--{{ section.id }} .sc-content{
    font-size: 12px;
    line-height: 17px;
    color: #000;
    font-weight: 500;
    text-align: justify;
  }
  .section-wrapper--{{ section.id }} .sc-content a span{
    text-decoration: none !important;
  }
  .section-wrapper--{{ section.id }} .single-caption-text-block{
    max-width: max-content;
    border: 1px solid #0000005e;
  }
  .section-wrapper--{{ section.id }} .single-caption-text-block p{
    max-width: unset;
  }
   .section-container--{{ section.id }} .smile-text-block {
  text-align: center;
  }
   .section-container--{{ section.id }} .smile-text-block h2 {
  font-size: 35px;
  color: #ffffff;
  margin-block: 0;
  }
   .section-container--{{ section.id }} .smile-text-block h3 {
  font-size: 28px;
  color: #5c439a;
  margin-block: 0;
  }
   .section-container--{{ section.id }} .smile-image-wrapper img {
  width: 100%;
  max-width: 400px;
  margin: auto;
  display: block;
  }

  @media screen and (max-width: 768px){
  .section-container--{{ section.id }}{
  margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
  margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
  padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
  padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
  }
  .section-wrapper--{{ section.id }}.page-width {
  display: grid;
  gap:10px;
  grid-template-columns: repeat(2,1fr);
  }
  .section-wrapper--{{ section.id }}  .single_caption {
  position: unset;
  transform: unset;
  align-items: flex-start;
  }
  .section-wrapper--{{ section.id }} .smile-text-block {
  grid-column: 1/-1;
  }
  .section-wrapper--{{ section.id }} .smile-image-wrapper img {
  transform: scale(1.3) translateX(-30px) translateY(10px);
  z-index: 4;
  position: relative;
  }
  .section-wrapper--{{ section.id }}  .single_caption :is(.caption-right-arrow , .caption-left-arrow ) {
  display : none;
  }
  .section-wrapper--{{ section.id }}  .single_caption_4 {
  display : none;
  }
  .section-wrapper--{{ section.id }}   .center-button-wrapper {
  text-align: center;
  grid-column: 1/-1;
  z-index: 4;
  transform: translateY(10px);
  }
  .section-wrapper--{{ section.id }}  a.white-button-1 {
  font-size: 14px;
  }
  }
</style>
<style>
    .caption-contents{
      max-width: 500px;
      min-width: 180px;
      border-radius: 15px;
      border: 1px solid #000;
      background-color: #fff;
      box-sizing: border-box;
      padding: 5px;
    }
    .caption-contents p{
      font-size: 12px;
      line-height: 17px;
      color: #000;
      max-width: 250px;
      min-width: 180px;
      margin-block: 0;
    }
    .caption-contents h6 {
      margin-block: 0;
      margin-bottom: 5px;
      color: #6f60e9;
      font-size: 14px;
    }
    .whitening-caption {
      display: flex;
      align-items: center;
      position: absolute;
    }
    .whitening-caption svg {
      max-width: 70px;
    }

  .caption_1.whitening-caption {
      top: 22%;
      left: 20%;
  }
  .caption_2.whitening-caption {
      top: 70%;
      left: 15%;
  }
  .caption_3.whitening-caption {
      top: 20%;
      right: 20%;
  }
  .caption_4.whitening-caption {
      top: 72%;
      right: 15%;
  }
</style>
<section class="section-container--{{ section.id }}">
  <!-- <div class="top-shape"><img src="{{ 'smile-top-curve.svg' | asset_url }}" /></div> -->
  <div class="section-wrapper--{{ section.id }} page-width">
    <div class="smile-text-block">
      <h2>{{ section.settings.title }}</h2>
      <h3>{{ section.settings.subtitle }}</h3>
    </div>
    <div class="smile-image-wrapper">
      {{ section.settings.image | img_url: 'master' | img_tag }}
    </div>
    <div class="caption_1 whitening-caption" data-aos="fade-right">
      <div class="caption-contents">{{ section.settings.caption_1 }}</div>
      {% render 'smile-all-icons', name: 'caption-left' %}
    </div>
    <div class="caption_2 whitening-caption" data-aos="fade-right">
      <div class="caption-contents">{{ section.settings.caption_2 }}</div>
      {% render 'smile-all-icons', name: 'caption-left' %}
    </div>
    <div class="caption_3 whitening-caption" data-aos="fade-left">
      {% render 'smile-all-icons', name: 'caption-right' %}
      <div class="caption-contents">{{ section.settings.caption_3 }}</div>
    </div>
    <div class="caption_4 whitening-caption" data-aos="fade-left">
      {% render 'smile-all-icons', name: 'caption-right' %}
      <div class="caption-contents">{{ section.settings.caption_4 }}</div>
    </div>

    <div class="center-button-wrapper">
      <a class="white-button-1" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
    </div>
  </div>
  <!-- <div class="bottom-shape"> <img src="{{ 'smile-bottom-curve.svg' | asset_url }}" /></div> -->
</section>

