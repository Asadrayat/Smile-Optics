{% assign id = section.id %}

<style>
      .coa_contact--{{ id }} {
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       max-width: 100vw;
       overflow: hidden;
      }
      .container-{{ id }} {
        background-image: url("{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}");
        background-repeat: repeat-x;
        background-size: 49% 164px;
        background-position: bottom left 370px;
        box-sizing: border-box;
        padding: 0px 0 100px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .container-{{ id }} h6{
        font-size: 33px;
        font-weight: 600;
        line-height: 33px;
        color: rgb(111, 96, 233);
        text-align: center;
        /* margin: 5px; */
      }
      .container-{{ id }} a{
        height: 40px;
        width: 230px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
     /* .cf__btn-text:hover {
        background: #11004A;
        color: rgb(167, 242, 246);
      } */
  @media screen and (max-width: 890px){

     .coa_contact--{{ id }} {
       margin-top: {{ section.settings.margin_top-m }}px;
       margin-bottom: {{ section.settings.margin_bottom-m }}px;
       padding-top: {{ section.settings.padding_top-m }}px;
       padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
      }
     .container-{{ id }} {
        background-size: 53% 80px;
        background-position: bottom left 355px;
      }
     .container-{{ id }} a{
        margin-bottom: 0px;
        width: 190px;
        font-size: 18px;
      }
      .container-{{ id }} h6{
        font-size: 22px;
        font-weight: 600;
        line-height: normal;
        margin-bottom: 15px;
        width: 80%;
      }
    }
</style>

<section class="coa_contact--{{ id }}">
  <div class="container-{{ id }}">
    <h6>{{ section.settings.desc }}</h6>
    <a class="blue-button-1 button-font" href="{{ section.settings.url }}">{{ section.settings.btn_text }}</a>
  </div>
</section>

