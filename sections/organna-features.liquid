<style>
  .section-container--{{ section.id }}{
    margin-top: {{ section.settings.margin_top | append:'px' }};
    margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
    padding-top: {{ section.settings.padding_top | append:'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
    overflow: hidden;
    position : relative;
    /* background: #1b0177;
    border-radius: 50px 50px 0 0; */
  }
.section-wrapper--{{ section.id }}  {
    padding-block: 20px;
    background: #1b0177;
    border-radius: 150px 150px 0 0; 
}
.section-wrapper--{{ section.id }} .text-block {
    text-align: center;
    line-height: 0;
    margin-block: 50px;
}
.section-wrapper--{{ section.id }} .text-block {
    text-align: center;
    line-height: 0;
    margin-block: 50px;
}
.section-wrapper--{{ section.id }} h2.text-block-title {
    color: #ffffff;
    letter-spacing: 0em;
    font-size: 33px;
    line-height: 26px;
    text-align: center;
    font-weight: 100;
}
.section-wrapper--{{ section.id }} p.text-block--content {
    font-size: 24px;
    text-align: center;
    color: #01a6a5;
    letter-spacing: 0em;
    font-weight: 600;
    position: relative;
    padding-bottom: 30px;
}
.section-wrapper--{{ section.id }} p.text-block--content:after{
  position: absolute;
  content: "";
  width: 80%;
  height: 2px;
  background: gray;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}
.features-block-wrapper {
    display: flex;
    flex-wrap: wrap;
}
.feature-single-block {
    width: 50%;
    display: flex;
    gap: 15px;
    padding: 40px;
}
.feature-icon {
    display: flex;
    align-items: center;
}
.feature-title {
    font-size: 16px;
    font-style: italic;
    color: #ffffff;
    letter-spacing: 0em;
    margin: 0;
}
.feature-content {
    color: #ffffff;
    margin: 0;
    text-align: justify;
    line-height: 15px;
    font-size: 13px;
}
.feature-contents a {
    color: #8015E8;
    font-size: 10px;
}  
    @media screen and (max-width: 768px){
.section-container--{{ section.id }}{
    margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
    margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
    padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
    padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
}
.section-wrapper--{{ section.id }}  {
    padding-block: 05px;
    border-radius: 50px 50px 0 0;
}

.section-wrapper--{{ section.id }} h2.text-block-title {
    font-size: 24px;
}
.section-wrapper--{{ section.id }} p.text-block--content {
    font-size: 24px;
}
.features-block-wrapper {
    flex-direction: column;
    gap:20px;
}
.feature-single-block {
    width: 100%;
    gap: 15px;
    padding: 15px;
}
    }
</style>
<section class="section-container--{{ section.id }} page-width">
    <div class="section-wrapper--{{ section.id }} ">
      <div class="text-block">
        {{ section.settings.image | img_url: 'master' | img_tag }}
        <h2 class="text-block-title ">{{ section.settings.title }}</h2>
        <p class="text-block--content">{{ section.settings.content }}</p>
      </div>

      <div class="features-block-wrapper">
        {% for block in section.blocks %}
          <div class="feature-single-block">
            <div class="feature-icon">{{ block.settings.icon | img_url: 'master' | img_tag }}</div>
            <div class="feature-contents">
              <h3 class="feature-title">{{ block.settings.title }}</h3>
              <p class="feature-content">{{ block.settings.content }}</p>
              <a href=" {{ block.settings.button_url }}"> {{ block.settings.button_text }} </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</section>



{% schema %}
{
  "name": "Organna Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Welcome to my Organna!"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
     {
       "name":"Feature",
       "type":"button_section",
       "limit": 4,
       "settings" :[
         {
           "type": "text",
           "id" : "title",
           "label": "Title"
         },
         {
           "type": "textarea",
           "id" : "content",
           "label": "Content"
         },
         {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
         {
           "type": "text",
           "id" : "button_text",
           "label": "Button Text"
         },
         {
           "type": "url",
           "id" : "button_url",
           "label": "Button Url"
         }
       ]

     }
   ],
  "presets": [
    {
      "name": "Organna Features"
    }
  ]
}
{% endschema %}
