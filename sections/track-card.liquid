{% assign id = section.id %}

<style>
  .cc-tarck{{ id }} {
     margin-top: {{ section.settings.margin_top }}px;
     margin-bottom: {{ section.settings.margin_bottom }}px;
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
     background: 
    }
  .card-{{ id }}{
    width: 330px;
    height: 277px;
    object-fit: cover;
    background: #fff;
    border-radius: 25px;
    box-shadow: 0 0 4px #0000001c;
    padding: 15px 15px 0 15px;
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
  }
  .card-{{ id }} h4{
    font-size: 17px;
    color: rgb(89, 89, 89); 
   }
  .card-{{ id }} a,
  .card-{{ id }} h4{
    position: relative;
    z-index: 2;
   }
  .card-{{ id }} a{
    text-decoration: none;
    margin: 0;
    font-size: 14px;
    color: rgb(1, 166, 165);
    cursor: pointer;
   }
  .container-{{ id }} {
    background: #F9F9FB;
    border-radius: 0 0 150px 150px;
  }
  .wrapper-{{ id }}{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    padding: 40px 0 40px 0;
    justify-items: center;
  }
  .img-{{ id }} img{
    position: absolute;
    bottom: 0; 
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
 
@media screen and (max-width: 890px){  
   .cc-tarck{{ id }} {
     margin-top: {{ section.settings.margin_top-m }}px;
     margin-bottom: {{ section.settings.margin_bottom-m }}px;
     padding-top: {{ section.settings.padding_top-m }}px;
     padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
    }
    .container-{{ id }} {
      border-radius: 0;
    }
    .wrapper-{{ id }}{
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .card-{{ id }}{
      width: 226px;
      height: 150px;
    }
  .card-{{ id }} h4{
      width: 70%;
      font-size: 14px;
      margin: 0;
   }
  .card-{{ id }} a{
    font-size: 14px;
   }
  }
</style>

<section class="cc-tarck{{ id }}">
  <div class="container-{{ id }}">
    <div class="wrapper-{{ id }} page-width">
    {% for block in section.blocks %} 
      <div class="card-{{ id }} " data-aos="zoom-in" data-aos-duration='400'>
        <h4>{{ block.settings.text }}</h4>
        <a href="/">{{ block.settings.desc }} ></a>
        {% if block.settings.card_img %}
        <div class="img-{{ id }}"><img src="{{ block.settings.card_img | image_url: width: block.settings.image.width | image_tag: loading: 'lazy'}}"></div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>



