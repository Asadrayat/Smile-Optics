{% liquid
  assign id = section.id
  assign settings = section.settings
  assign blocks = section.blocks
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      background-color: #FEFAF0;
    }
    .image_wrapper-{{ id }}:before {
      position: absolute;
      content: "";
      background-color: #FEFAF0;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 50%;
      z-index: -1;
    }
    .image_wrapper-{{ id }} {
      position: relative;
      display: grid;
      grid-template-columns: repeat(3,1fr);
      grid-template-rows: repeat(2,1fr);
    }
    .img-2-{{ id }} {
      grid-column: 2/3;
      grid-row: 1/-1;
    }
    .wrapper-{{ id }} {
      justify-self: center;
    }
    .image_wrapper-{{ id }} img{
      max-width: 327px;
      height: auto;
      object-fit: cover;
      border-radius: 15px;
    }
    .content-{{ id }} {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    .info-{{ id }} {
      max-width: 286px;
      justify-self: center;
    }
    .info-{{ id }} h3{
      font-size: 35px;
      line-height: 49px;
      font-family: auto;
      font-weight: 400;
      text-align: center;
    }
    .info-{{ id }} p{
      font-size: 12px;
      line-height: 22px;
      color: rgb(64, 63, 43);
      text-align: justify;
    }

    @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .image_wrapper-{{ id }} {
      display: grid;
      grid-template-columns: 1fr;
    }
    .img-2-{{ id }} {
      grid-column: unset;
      grid-row: 1 / -1;
    }
    .content-{{ id }} {
        grid-template-columns: 1fr;
    }
    .info-{{ id }} {
      max-width: 90%;
      justify-self: center;
    }
    .image_wrapper-{{ id }} img {
        max-width: 100%;
    }
    .info-{{ id }} p{
      font-size: 13px;
      line-height: 23px;
      letter-spacing: 1px;
    }
  }
</style>

<div class="sec-{{ id }} page-width">
  <div class="image_wrapper-{{ id }}">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div class="img-{{ forloop.index }}-{{ id }} wrapper-{{ id }}">
          {{ block.settings.image | image_url: width: section.settings.img_banner.width | image_tag: loading: 'lazy' }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="content-{{ id }}">
    {% for block in section.blocks %}
      {% if block.type == 'content' %}
        <div class="info-{{ id }}">
          {% if block.settings.title %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.desc %}
            <p>{{ block.settings.desc }}</p>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

