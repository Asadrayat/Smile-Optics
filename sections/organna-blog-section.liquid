<style>
  .section-container--{{ section.id }}{
    margin-top: {{ section.settings.margin_top | append:'px' }};
    margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
    padding-top: {{ section.settings.padding_top | append:'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
    overflow: hidden;
    position : relative;
  }
    .section-wrapper--{{ section.id }} .text-block {
      text-align: center;
      line-height: 0;
      margin-block: 50px;
    }
   .section-wrapper--{{ section.id }} h2.text-block-title {
      color: #1b0177;
      letter-spacing: 0em;
      font-size: 44px;
      line-height: 1em;
      text-align: center;
      font-weight: 100;
    }
    .section-wrapper--{{ section.id }} {
    }
   .section-wrapper--{{ section.id }} p.text-block--content {
      font-size: 22px;
      text-align: center;
      color: #1b0177;
      letter-spacing: 0em;
      font-weight: 600;
    }
   .section-wrapper--{{ section.id }} p.text-block--content span {
      color: #01a6a5;
    }

   .section-wrapper--{{ section.id }} .article-wrapper {
      display: flex;
      justify-content: space-between;
      gap: 30px;
    }

    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }
      .article-wrapper {
        gap: 16px;
        flex-direction: column;
      }
     .section-wrapper--{{ section.id }} h2.text-block-title {
        font-size: 22px;
      }
     .section-wrapper--{{ section.id }} p.text-block--content {
        font-size: 13px;
      }

    }
</style>
<section class="section-container--{{ section.id }}">
  <div class="page-width">
    <div class="section-wrapper--{{ section.id }}">
      <!-- <div class="text-block">
        {{ section.settings.image | img_url: 'master' | img_tag }}
        <h2 class="text-block-title ">{{ section.settings.title }}</h2>
        <p class="text-block--content">{{ section.settings.content }}</p>
      </div> -->
      {%  render 'organna-icon-title', image: section.settings.image, title: section.settings.title, content: section.settings.content  %}
      
      <div class="article-wrapper">
        {% for block in section.blocks %}
          {% render 'organna-article-card', article: block.settings.article, custom_image: block.settings.image %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Organna Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Welcome to my Organna!"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
     {
       "name" : "Article",
       "type":  "article",
       "limit": 3,
       "settings": [
         {
            "type": "article",
            "id": "article",
            "label": "Article"
          },
         {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }

       ]
     }
   ],
  "presets": [
    {
      "name": "Organna Blog Section"
    }
  ]
}
{% endschema %}
