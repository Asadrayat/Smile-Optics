      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom-m",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
   {
      "name": "Add Card",
      "type": "Text",
      "settings": [
          {
            "id": "icon",
            "type": "image_picker",
            "label": "Add Card Icon"
          },
          {
            "id": "card_title",
            "type": "text",
            "label": "Add Card Title",
            "default":"Issues With Your Order?"
          },
          {
            "id": "card_desc",
            "type": "textarea",
            "label": "Add Card Description",
            "default": "Our Support team is available Monday - Friday from 7am to 7pm. Call, email, or live chat with an specialist."
          },
          {
            "id": "btn_text",
            "type": "text",
            "label": "Add Button Text"
          },
          {
            "id": "url",
            "type": "url",
            "label": "Add Button Url"
          }
      ]
    }
  ],
  "presets":[
    {
      "name": "Help Link"
    }
  ]
}
{% endschema %}

